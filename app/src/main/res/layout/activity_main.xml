<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F8F3"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/recyclerviewbtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16sp"
            android:backgroundTint="#4CAF50"

            android:elevation="10dp"
            android:text="Users"

            android:visibility="gone" />


        <Button
            android:id="@+id/recyclerviewbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16sp"

            android:backgroundTint="#4CAF50"
            android:elevation="10dp"

            android:text="Orders (One Time)" />

        <Button
            android:id="@+id/recyclerviewbtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16sp"

            android:backgroundTint="#4CAF50"
            android:elevation="10dp"

            android:text="Orders (Silver Plan)" />


        <Button
            android:id="@+id/recyclerviewbtn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16sp"
            android:backgroundTint="#4CAF50"

            android:elevation="10dp"
            android:text="Feedbacks"

            android:visibility="gone" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>